<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.ly.test.FrameActivity">


    <Button
        android:id="@+id/btn_testTransparency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="透明" />

    <Button
        android:id="@+id/btn_testRotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旋转" />

    <Button
        android:id="@+id/btn_testTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="平移" />

    <Button
        android:id="@+id/btn_testScale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testScale"
        android:text="缩放" />


    <Button
        android:id="@+id/btn_testOrganize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testOrganize"
        android:text="组合动画" />


</LinearLayout>
